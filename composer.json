{
    "name": "jfcherng/php-color-output",
    "description": "Make your PHP command-line application colorful.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jack Cherng",
            "email": "jfcherng@gmail.com"
        }
    ],
    "keywords": [
        "command-line",
        "color",
        "ansi-colors",
        "str-color"
    ],
    "autoload": {
        "psr-4": {
            "Jfcherng\\Color\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Jfcherng\\Color\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14.1",
        "phan/phan": "^1.2",
        "phpunit/phpunit": "^7.2 || ^8.0"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "analyze": [
            "phan --color"
        ],
        "fix": [
            "php-cs-fixer fix --verbose"
        ],
        "test": [
            "phpunit --verbose"
        ]
    }
}
